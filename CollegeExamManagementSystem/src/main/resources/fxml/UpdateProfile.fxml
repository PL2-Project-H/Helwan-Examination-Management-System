<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="user.UpdateProfileController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Update Profile">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        
        <Label fx:id="userIdLabel" text="User ID: (cannot be changed)">
            <font>
                <Font name="System Italic" size="12.0" />
            </font>
        </Label>
        
        <!-- Username Section -->
        <Label text="Update Username:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <HBox spacing="10">
            <children>
                <TextField fx:id="usernameField" promptText="New username" prefWidth="200.0" />
                <Button text="Update Username" onAction="#handleUpdateUsername" />
            </children>
        </HBox>
        
        <!-- Password Section -->
        <Label text="Update Password:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Label>
        <PasswordField fx:id="currentPasswordField" promptText="Current password" prefWidth="250.0" />
        <PasswordField fx:id="newPasswordField" promptText="New password (min 6 characters)" prefWidth="250.0" />
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password" prefWidth="250.0" />
        <Button text="Update Password" onAction="#handleUpdatePassword" />
    </children>
</VBox>
