<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lecturer.ExamManagementController">
    <children>
        <TableView fx:id="examsTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="titleColumn" text="Title" />
                <TableColumn fx:id="subjectIdColumn" text="Subject ID" />
            </columns>
        </TableView>
        <Button text="Add Exam" onAction="#handleAddExam" />
        <Button text="Edit Exam" onAction="#handleEditExam" />
        <Button text="Delete Exam" onAction="#handleDeleteExam" />
        <Button text="Manage Questions" onAction="#handleManageQuestions" />
    </children>
</VBox>
