<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="admin.FeedbackViewController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label text="Student Feedback">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Label fx:id="infoLabel" text="Loading feedback..." />
        <TableView fx:id="feedbackTable" VBox.vgrow="ALWAYS" prefHeight="250.0">
            <columns>
                <TableColumn fx:id="studentNameColumn" text="Student" prefWidth="200.0" />
                <TableColumn fx:id="timestampColumn" text="Submitted" prefWidth="200.0" />
            </columns>
        </TableView>
        <Label text="Feedback Text:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TextArea fx:id="feedbackTextArea" editable="false" prefRowCount="5" wrapText="true" promptText="Select a feedback entry to view its content..." />
        <Button text="Refresh" onAction="#handleRefresh" />
    </children>
</VBox>
