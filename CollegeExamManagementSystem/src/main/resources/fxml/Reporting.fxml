<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lecturer.ReportingController">
    <children>
        <ComboBox fx:id="examComboBox" promptText="Select an Exam" onAction="#handleExamSelection" />
        <TableView fx:id="gradesTable">
            <columns>
                <TableColumn fx:id="studentNameColumn" text="Student Name" />
                <TableColumn fx:id="scoreColumn" text="Score" />
                <TableColumn fx:id="approvedColumn" text="Approved" />
            </columns>
        </TableView>
    </children>
</VBox>
