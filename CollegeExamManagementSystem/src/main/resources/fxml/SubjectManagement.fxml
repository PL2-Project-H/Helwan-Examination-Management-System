<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="admin.SubjectManagementController">
    <children>
        <TableView fx:id="subjectsTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="nameColumn" text="Name" />
            </columns>
        </TableView>
        <Button text="Add Subject" onAction="#handleAddSubject" />
        <Button text="Edit Subject" onAction="#handleEditSubject" />
        <Button text="Delete Subject" onAction="#handleDeleteSubject" />
        <Button text="Assign to Students" onAction="#handleAssignToStudents" />
        <Button text="Assign to Lecturers" onAction="#handleAssignToLecturers" />
    </children>
</VBox>
