<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="admin.GradeApprovalController">
    <children>
        <TableView fx:id="gradesTable">
            <columns>
                <TableColumn fx:id="gradeIdColumn" text="Grade ID" />
                <TableColumn fx:id="examIdColumn" text="Exam ID" />
                <TableColumn fx:id="studentIdColumn" text="Student ID" />
                <TableColumn fx:id="scoreColumn" text="Score" />
                <TableColumn fx:id="approvedColumn" text="Approved" />
            </columns>
        </TableView>
        <Button text="Approve Grade" onAction="#handleApproveGrade" />
    </children>
</VBox>
