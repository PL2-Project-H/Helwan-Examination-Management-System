<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ScrollPane?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="student.ExamViewController">
    <children>
        <Label fx:id="examTitleLabel" />
        <Label fx:id="timerLabel" />
        <ScrollPane fx:id="questionsScrollPane">
            <content>
                <VBox fx:id="questionsVBox" spacing="20" />
            </content>
        </ScrollPane>
        <Button text="Submit Exam" onAction="#handleSubmitExam" />
    </children>
</VBox>
