<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="student.ResultViewController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label text="My Results">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Label fx:id="infoLabel" text="Loading results..." />
        <TableView fx:id="resultsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="examTitleColumn" text="Exam Title" prefWidth="200.0" />
                <TableColumn fx:id="subjectColumn" text="Subject" prefWidth="150.0" />
                <TableColumn fx:id="scoreColumn" text="Score %" prefWidth="100.0" />
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100.0" />
            </columns>
        </TableView>
    </children>
</VBox>
