<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lecturer.QuestionManagementController">
    <children>
        <TableView fx:id="questionsTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="textColumn" text="Question Text" />
                <TableColumn fx:id="typeColumn" text="Type" />
            </columns>
        </TableView>
        <Button text="Add Question" onAction="#handleAddQuestion" />
        <Button text="Edit Question" onAction="#handleEditQuestion" />
        <Button text="Delete Question" onAction="#handleDeleteQuestion" />
    </children>
</VBox>
