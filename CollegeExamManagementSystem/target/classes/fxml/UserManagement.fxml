<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="admin.UserManagementController">
    <children>
        <TableView fx:id="usersTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="usernameColumn" text="Username" />
                <TableColumn fx:id="passwordColumn" text="Password" />
                <TableColumn fx:id="roleColumn" text="Role" />
            </columns>
        </TableView>
        <Button text="Add User" onAction="#handleAddUser" />
        <Button text="Edit User" onAction="#handleEditUser" />
        <Button text="Delete User" onAction="#handleDeleteUser" />
        <Button text="Search for User" onAction="#handleSearchUser" />
    </children>
</VBox>
